<body>

	<div class="container">
		<%@ include file="upperMenu.jsp"%>

		<!-- Jumbotron -->
		<div class="jumbotron">
			<form class="form-search">
				<input type="text" class="input-medium search-query" placeholder="Filtrar resultados">
					<button type="submit">
						<i class="icon-search"></i>
					</button>
			</form>
			<div class="container-fluid">
				<div class="row-fluid">
					<div class="span2">
						<ul class="nav nav-list pull-left">
							<li class="nav-header">Opciones</li>
							<li class="active"><a href="#">Listar Todos</a></li>
						</ul>
					</div>
					<div class="span10">
						<table class="table table-striped pull-right">
							<thead>
								<tr>
									<th>Legajo</th>
									<th>Nombre</th>
									<th>Apellido</th>
									<th></th>
								</tr>
							</thead>
							<tbody>
								<c:forEach var="person" items="${persons}"
									varStatus="rowCounter">
									<tr>
										<td>${person.legacy}</td>
										<td>${person.firstName}</td>
										<td>${person.lastName}</td>
										<td><a href="#"><i class="icon-edit"></i></a></td>
									</tr>
								</c:forEach>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>

		<div class="footer">
			<p>&copy; CEITBA 2013</p>
		</div>

	</div>
